# CORS Configuration (Update with your production domain)
CORS_ORIGIN=https://your-production-domain.com

# Rate Limiting (Stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Request Body Limits
JSON_BODY_LIMIT=10mb
URLENCODED_BODY_LIMIT=10mb

# Logging Configuration (Production settings)
LOG_LEVEL=error
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=10

# Database Configuration (Update with production values)
MONGODB_URI=mongodb://mongo-cluster:27017/ide-backend-prod
MONGODB_MAX_POOL_SIZE=20
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000
REDIS_URL=redis://redis-cluster:6379

# Authentication (Generate new secrets for production)
JWT_SECRET=your-production-jwt-secret-256-bits-minimum
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth (Update with production credentials)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_CALLBACK_URL=https://your-production-domain.com/api/auth/google/callback

# Session Configuration (Generate new secret for production)
SESSION_SECRET=your-production-session-secret-256-bits-minimum

# Security Configuration
DISABLE_AUTH=false
ENABLE_HTTPS_REDIRECT=true
ENABLE_HELMET=true
TRUST_PROXY=true

# Container Configuration
DOCKER_HOST=unix:///var/run/docker.sock
CONTAINER_CPU_LIMIT=0.5
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_TIMEOUT=300000

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# External Services (Configure as needed)
SENTRY_DSN=https://your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key
DATADOG_API_KEY=your-datadog-key