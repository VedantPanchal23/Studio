# Production Environment Configuration for Frontend
# Copy this to .env.production and update values for your production deployment

# Backend API Configuration (Update with your production domain)
VITE_API_URL=https://your-production-domain.com/api
VITE_BACKEND_URL=https://your-production-domain.com

# Firebase Configuration
# Get these values from Firebase Console > Project Settings > Web apps > Config
VITE_FIREBASE_API_KEY=your-web-api-key-from-firebase-console
VITE_FIREBASE_AUTH_DOMAIN=ide-studio-77851.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=ide-studio-77851
VITE_FIREBASE_STORAGE_BUCKET=ide-studio-77851.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=117830506230546905693
VITE_FIREBASE_APP_ID=your-app-id-from-firebase-console

# Production Settings
VITE_DISABLE_AUTH=false
VITE_USE_EMULATOR=false

# CDN Configuration (Optional - for asset optimization)
VITE_CDN_URL=https://cdn.your-domain.com
VITE_ASSETS_URL=https://assets.your-domain.com

# Analytics and Monitoring (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn
VITE_ENVIRONMENT=production

# Feature Flags (Optional)
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_FILE_SHARING=true